@using myTBsys.Models;
@{
    ViewBag.Title = "修改教材订购信息";
    Layout = "~/Areas/TBsys/Views/Shared/_TeachingOffice.cshtml";
    T_TB_Choose item = ViewBag.item;

}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                教材订购信息
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="/TBsys/TeachingOffice/editBook" method="post">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <div class="form-group">
                                <label>课程名称：</label>
                                <input class="form-control" name="CourseName" value="@item.T_TB_TeachingTask.CourseName">
                            </div>
                            <div class="form-group">
                                <label>教材名称：</label>
                                <input class="form-control" name="bookName" value="@item.T_TB_Books.Name">
                            </div>
                            <div class="form-group">
                                <label>书号：</label>
                                <input class="form-control" name="bookId" value="@item.T_TB_Books.Id">
                            </div>
                            <div class="form-group">
                                <label>编者：</label>
                                <input class="form-control" name="Author" value="@item.T_TB_Books.Author">
                            </div>
                            <div class="form-group">
                                <label>价格：</label>
                                <input class="form-control" name="Price" value="@item.T_TB_Books.Price">
                            </div>
                            <div class="form-group">
                                <label>出版社：</label>
                                <input class="form-control" name="Publisher" value="@item.T_TB_Books.Publisher">
                            </div>
                            <div class="form-group">
                                <label>版次：</label>
                                <input class="form-control" name="Edition" value="@item.T_TB_Books.Edition">
                            </div>



                            <button type="submit" class="btn btn-default">保存</button>
                            <button type="reset" class="btn btn-default">重置</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

