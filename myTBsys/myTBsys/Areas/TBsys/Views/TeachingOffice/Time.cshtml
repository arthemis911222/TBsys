@using myTBsys.Models;
@{
    ViewBag.Title = "后台——时间设置";
    Layout = "~/Areas/TBsys/Views/Shared/_TeachingOffice.cshtml";
    List<T_QT_Other> lst = ViewBag.lst;
    int staticId = 1;

}

<div class="panel panel-default">
    <div class="panel-heading">时间设置</div>
    <div class="panel-body">
        <ul class="list-group">

            <li class="list-group-item">
                <form action="/TBsys/TeachingOffice/editBITime" method="post" >
                    <h4><strong>教材录入时间：</strong></h4>
                    
                        @{
                            foreach (T_QT_Other item in lst)
                            {
                                if (item.Id == staticId)
                                {
                                    string t1 = Convert.ToDateTime(item.BIStTime).ToString("yyyy-mm-dd hh:ii:ss");
                                    string t2 = Convert.ToDateTime(item.BIEnTime).ToString("yyyy-mm-dd hh:ii:ss");

                                    <div class="form-group">
                                        <label for="exampleInputName2">起始时间：</label>
                                        <input type="hidden" name="Id" value="@item.Id" />
                                        <input id="datetimepicker" class="datetimepicker" name="BIStTime" value="@item.BIStTime"  data-date-format="yyyy-mm-dd hh:ii" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail2">截止时间：</label>
                                        <input size="16" type="text" value="2012-06-15 14:45" readonly class="form_datetime">
                                    </div>
                                }
                            }
                        }                 
                    <button type="submit" class="btn btn-default">提交</button>
                </form>
            </li>

            <li class="list-group-item">
                <form action="/TBsys/TeachingOffice/editCKTime" method="post">
                    <h4><strong>系主任审核时间：</strong></h4>
                    @{
                        foreach (T_QT_Other item in lst)
                        {
                            if (item.Id == staticId)
                            {
                                string t1 = Convert.ToDateTime(item.CKStTime).ToString("yyyy-MM-ddThh:mm:ss");
                                string t2 = Convert.ToDateTime(item.CKEnTime).ToString("yyyy-MM-ddThh:mm:ss");


                                <div class="form-group">
                                    <label for="exampleInputName2">起始时间：</label>
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <input type="datetime-local" name="CKStTime" value="@t1" />
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail2">截止时间：</label>
                                    <input type="datetime-local" name="CKStTime" value="@t2" />
                                </div>
                            }
                    }
                    }                    
                    <button type="submit" class="btn btn-default">提交</button>
                </form>
            </li>
            
            <li class="list-group-item">
                <form action="/TBsys/TeachingOffice/editCBTime" method="post">
                    <h4><strong>教材订购时间：</strong></h4>
                    @{
                        foreach (T_QT_Other item in lst)
                        {
                            if (item.Id == staticId)
                            {
                                <div class="form-group">
                                    <label for="exampleInputName2">起始时间：</label>
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <input type="datetime-local" name="CBStTime" value="@item.CBStTime" />
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail2">截止时间：</label>
                                    <input type="datetime-local" name="CBStTime" value="@item.CBEnTime" />
                                </div>
                            }
                        }
                    }
                    
                    <button type="submit" class="btn btn-default">提交</button>
                </form>
                
            </li>
            
        </ul>
    </div>
</div>

@section javascript{
<script>
    $(".form_datetime").datepicker({ format: 'yyyy-mm-dd' });
    $('#datetimepicker').datepicker();
    
</script>
}



