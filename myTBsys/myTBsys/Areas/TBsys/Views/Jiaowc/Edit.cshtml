@using myTBsys.Models;
@{
    ViewBag.Title = "课本状态修改";
    Layout = "~/Areas/TBsys/Views/Shared/_Layout.cshtml";
    T_TB_Books item = ViewBag.item;
    int nstate=2;//当前书的状态
    List<T_TB_StoreTable> lst5 = ViewBag.lst5;
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                书本状态修改
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="/TBsys/jiaowc/EditSave" method="post">
                            <div class="form-group">
                                <label>书名：</label>
                                <input type="hidden" name="Id" value="@item.Id" />
                                @*<input class="form-control" name="Name" value="@item.Name" />*@
                                <p>@item.Name</p>
                            </div>
                            <div class="form-group">
                                <label>版次：</label>
                                @*<textarea class="form-control" rows="3" name="Edition">@item.Edition</textarea>*@
                                <p>@item.Edition</p>
                            </div>
                            <div class="form-group">
                                <label>作者：</label>
                                @*<textarea class="form-control" rows="3" name="Author">@item.Author</textarea>*@
                                <p>@item.Author</p>
                            </div>
                            <div class="form-group">
                                <label>价格：</label>
                                @*<textarea class="form-control" rows="3" name="Price">@item.Price</textarea>*@
                                <p>@item.Price</p>
                            </div>
                            <div class="form-group">
                                <label>出版社：</label>
                                @*<textarea class="form-control" rows="3" name="Publisher">@item.Publisher</textarea>*@
                                <p>@item.Publisher</p>
                            </div>
                            @*<div class="form-group">
                                <label>库存</label>
                                <textarea class="form-control" rows="3" name="Store">@item.Store</textarea>
                            </div>*@
                            <div class="form-group">
                                <label>状态：</label>

                                @{
                                    foreach (T_TB_StoreTable item5 in lst5)
                                    {
                                        if (item.Id == item5.BookId)
                                        {
                                            //<textarea class="form-control" rows="3" name="State">@item5.State</textarea>
                                            nstate = @item5.State;
                                            break;
                                        }
                                    }
                                }

                                @*<textarea class="form-control" rows="3" name="Status">@item.Status</textarea>*@

                                @{
                                    if (nstate == 2)
                                    {
                                        <div class="form-group">
                                            <input type="radio" name="CState" value="失败" />失败
                                            <input type="radio" name="CState" value="成功" />成功
                                            <input type="radio" name="CState" checked="checked" value="初始" />初始
                                        </div>
                                    }
                                    if (nstate == 0)
                                    {
                                        <div class="form-group">
                                            <input type="radio" name="CState" checked="checked" value="失败" />失败
                                            <input type="radio" name="CState" value="成功" />成功
                                            <input type="radio" name="CState" value="初始" />初始
                                        </div>
                                    }
                                    if (nstate == 4)
                                    {
                                        <div class="form-group">
                                            <input type="radio" name="CState" value="失败" />失败
                                            <input type="radio" name="CState" checked="checked" value="成功" />成功
                                            <input type="radio" name="CState" value="初始" />初始
                                        </div>
                                    }
                                }
                            </div>
                            @*<div class="form-group">
                                <label>备注</label>
                                <textarea class="form-control" rows="3" name="Description">@item.Description</textarea>
                            </div>*@
                            <button type="submit" class="btn btn-default">保存</button>
                            <button type="reset" class="btn btn-default">清空</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>




