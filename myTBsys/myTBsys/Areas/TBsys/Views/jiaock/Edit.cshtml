@using myTBsys.Models;

@{
    ViewBag.Title = "教科书分发";
    Layout = "~/Areas/TBsys/Views/Shared/_Layout.cshtml";
    T_TB_Fenfa item = ViewBag.item;
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="/TBsys/jiaock/EditSave" method="post">
                            <div class="form-group">
                                <label>教材编号</label>
                                <input type="hidden" name="Id" value="@item.Id" />
                                @*<input class="form-control" name="BookId" value="@item.BookId" />*@
                                <p>@item.BookId</p>
                            </div>
                            <div class="form-group">
                                <label>数量</label>
                                @*<textarea class="form-control" rows="3" name="BookNum">@item.BookNum</textarea>*@
                                <p>@item.BookNum 本</p>
                            </div>
                            <div class="form-group">
                                <label>实交</label>
                                @*<textarea class="form-control" rows="3" name="RealPay">@item.RealPay</textarea>*@
                                <p>@item.RealPay</p>
                            </div>
                            
                            <div class="form-group">
                                <label>领取人学号</label>
                                <input class="form-control" rows="3" name="StuId" value="@item.StuId">
                            </div>
                            <div class="form-group">
                                <label>状态：</label>
                                @{
                                    if (item.State == 4)
                                    {
                                        <div class="form-group">
                                            <input type="radio" name="CState" value="否" />否
                                            <input type="radio" name="CState" checked="checked" value="是" />是
                                        </div>
                                    }
                                    if (item.State == 2)
                                    {
                                        <div class="form-group">
                                            <input type="radio" name="CState" checked="checked" value="否" />否
                                            <input type="radio" name="CState" value="是" />是
                                        </div>
                                    }
                                }
                            </div>
                                <button type="submit" class="btn btn-default">保存</button>
                                <button type="reset" class="btn btn-default">清空</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


