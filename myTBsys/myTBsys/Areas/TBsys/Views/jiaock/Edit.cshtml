@using myTBsys.Models;
@{
    ViewBag.Title = "教科书分发";
    Layout = "~/Areas/TBsys/Views/Shared/_Layout.cshtml";
    T_TB_Fenfa item = ViewBag.item;
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="/TBsys/jiaowc/EditSave" method="post">
                            <div class="form-group">
                                <label>教材编号</label>
                                <input type="hidden" name="Id" value="@item.Id" />
                                <input class="form-control" name="BookId" value="@item.BookId" />
                            </div>
                            <div class="form-group">
                                <label>数量</label>
                                <textarea class="form-control" rows="3" name="BookNum">@item.BookNum</textarea>
                            </div>
                            <div class="form-group">
                                <label>需付</label>
                                <textarea class="form-control" rows="3" name="ShouldPay">@item.ShouldPay</textarea>
                            </div>
                            <div class="form-group">
                                <label>实交</label>
                                <textarea class="form-control" rows="3" name="RealPay">@item.RealPay</textarea>
                            </div>
                            <div class="form-group">
                                <label>时间</label>
                                <textarea class="form-control" rows="3" name="Time">@item.Time </textarea>
                            </div>
                            <div class="form-group">
                                <label>领取人学号</label>
                                <textarea class="form-control" rows="3" name="StuId">@item.StuId</textarea>
                            </div>
                            
                            <button type="submit" class="btn btn-default">保存</button>
                            <button type="reset" class="btn btn-default">清空</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


